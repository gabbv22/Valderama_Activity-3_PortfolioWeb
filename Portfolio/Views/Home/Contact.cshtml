@{
    ViewData["Title"] = "Contact Me";
}

<div class="contact-page-wrapper">
    <h1 class="contact-header">Contact Me</h1>

    <form class="contact-form-custom">
        <input type="text" placeholder="Your Name" class="form-field" />
        <input type="email" placeholder="Your Email" class="form-field" />
        <textarea placeholder="Message" class="form-field field-area"></textarea>

        <div class="button-container">
            <button type="submit" class="btn-send">SEND MESSAGE</button>
        </div>
    </form>
</div> 